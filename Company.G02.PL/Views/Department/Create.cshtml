@model CreateDepartmnetDto
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create">
    <h1 class="m-5">Create Department</h1>
    <div class="my-3">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control" />
        <span class="text-danger" asp-validation-for="Code"></span>
        <span class="text-danger" asp-validation-for="Name"></span>
        <span class="text-danger" asp-validation-for="CreateAt"></span>

    </div>

    <div class="my-3">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label"></label>
        <input asp-for="CreateAt" class="form-control" type="datetime-local" />
    </div>

    <div class="my-3">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-primary ms-2">Back To List</a>
    </div>
</form>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}