@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="my-3">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control" />
        <span class="text-danger" asp-validation-for="Code"></span>
    </div>

    <div class="my-3">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label"></label>
        <input asp-for="CreateAt" class="form-control" type="datetime-local" />
        <span class="text-danger" asp-validation-for="CreateAt"></span>
    </div>

    <div class="my-3">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary ms-2">Back To List</a>
    </div>
</form>


