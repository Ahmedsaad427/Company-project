
@{
    ViewData["Title"] = "Details";
}

@model Department

@{
    ViewData["Title"] = "Details Page";
}

<h1 class="mb-4">Details Page</h1>

<div class="container">
    <form>
        <div class="mb-3">
            <label class="form-label">Code</label>
            <input class="form-control" value="@Model.Code" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" value="@Model.Name" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Date Of Creation</label>
            <input class="form-control" value="@Model.CreateAt.ToString("MM/dd/yyyy hh:mm tt")" readonly />
        </div>

        <div class="mt-3">
            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    </form>
</div>

