@model Department

@{
    ViewData["Title"] = "Delete Department";
}

<h1 class="mb-4">Delete Department</h1>

<div class="container">
    <h3>Are you sure you want to delete this department?</h3>

    <form asp-action="ConfirmDelete" asp-controller="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Code</label>
            <input class="form-control" value="@Model.Code" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" value="@Model.Name" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Date Of Creation</label>
            <input class="form-control" value="@Model.CreateAt.ToString("MM/dd/yyyy hh:mm tt")" readonly />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" asp-controller="DepartmentControllers" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
