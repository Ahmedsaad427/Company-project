@model Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h1 class="mb-4">Delete Employee</h1>

<div class="container">
    <form asp-action="DeleteConfirmed" asp-controller="Employee" method="post">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" value="@Model.Name" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Age</label>
            <input class="form-control" value="@Model.Age" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" value="@Model.Email" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Address</label>
            <input class="form-control" value="@Model.Address" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Phone</label>
            <input class="form-control" value="@Model.Phone" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Salary</label>
            <input class="form-control" value="@Model.Salary.ToString("C2")" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Status</label>
            <input class="form-control" value="@(Model.IsActive ? "Active" : "Inactive")" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Deleted</label>
            <input class="form-control" value="@(Model.IsDelete ? "Yes" : "No")" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Hiring Date</label>
            <input class="form-control" value="@Model.HiringTime.ToString("MM/dd/yyyy hh:mm tt")" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Date Of Creation</label>
            <input class="form-control" value="@Model.CreateAt.ToString("MM/dd/yyyy hh:mm tt")" readonly />
        </div>

        <div class="mt-3">
            <h3 class="text-danger">Are you sure you want to delete this employee?</h3>

            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" asp-controller="Employee" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
