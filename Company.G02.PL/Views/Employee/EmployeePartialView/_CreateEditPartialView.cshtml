@model CreateEmployeeDto
 <!-- Name -->
<div class="my-3">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span class="text-danger" asp-validation-for="Name"></span>
</div>

<!-- Age -->
<div class="my-3">
    <label asp-for="Age" class="col-form-label"></label>
    <input asp-for="Age" class="form-control" type="number" />
    <span class="text-danger" asp-validation-for="Age"></span>
</div>

<!-- Email -->
<div class="my-3">
    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control" type="email" />
    <span class="text-danger" asp-validation-for="Email"></span>
</div>

<!-- Address -->
<div class="my-3">
    <label asp-for="Address" class="col-form-label"></label>
    <input asp-for="Address" class="form-control" />
    <span class="text-danger" asp-validation-for="Address"></span>
</div>

<!-- Phone -->
<div class="my-3">
    <label asp-for="Phone" class="col-form-label"></label>
    <input asp-for="Phone" class="form-control" />
    <span class="text-danger" asp-validation-for="Phone"></span>
</div>

<!-- Salary -->
<div class="my-3">
    <label asp-for="Salary" class="col-form-label"></label>
    <input asp-for="Salary" class="form-control" type="number" step="0.01" />
    <span class="text-danger" asp-validation-for="Salary"></span>
</div>

<!-- IsActive -->
<div class="my-3">
    <label asp-for="IsActive" class="col-form-label"></label>
    <select asp-for="IsActive" class="form-control">
        <option value="true">Active</option>
        <option value="false">Inactive</option>
    </select>
    <span class="text-danger" asp-validation-for="IsActive"></span>
</div>

<!-- IsDelete -->
<div class="my-3">
    <label asp-for="IsDelete" class="col-form-label"></label>
    <select asp-for="IsDelete" class="form-control">
        <option value="false">No</option>
        <option value="true">Yes</option>
    </select>
    <span class="text-danger" asp-validation-for="IsDelete"></span>
</div>

<!-- Hiring Time -->
<div class="my-3">
    <label asp-for="HiringTime" class="col-form-label"></label>
    <input asp-for="HiringTime" class="form-control" type="datetime-local" />
    <span class="text-danger" asp-validation-for="HiringTime"></span>
</div>

<!-- Create At -->
<div class="my-3">
    <label asp-for="CreateAt" class="col-form-label"></label>
    <input asp-for="CreateAt" class="form-control" type="datetime-local" />
    <span class="text-danger" asp-validation-for="CreateAt"></span>
</div>